<% content_for :titlebar do %>

<h2 style="color:white">Health Insurance - <%= @health_insurance.name %></h2>

<% end %>

<%= form_with model: @health_insurance, local: true, 
  url: profile_health_insurance_path(profile_email: @profile.email) do |form| %>

  <div class="form-horizontal">
    <div class="form-group">
      <%= form.label :name %>
      <% if @health_insurance and @health_insurance.errors.messages[:name] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:name].to_sentence %>
        </div>
      <% end %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :provider %>
      <% if @health_insurance and @health_insurance.errors.messages[:provider] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:provider].to_sentence %>
        </div>
      <% end %>
      <%= form.text_field :provider, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :plan_name %>
      <% if @health_insurance and @health_insurance.errors.messages[:plan_name] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:plan_name].to_sentence %>
        </div>
      <% end %>
      <%= form.text_field :plan_name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :plan_number %>
      <% if @health_insurance and @health_insurance.errors.messages[:plan_number] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:plan_number].to_sentence %>
        </div>
      <% end %>
      <%= form.text_field :plan_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :plan_type %>
      <% if @health_insurance and @health_insurance.errors.messages[:plan_type] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:plan_type].to_sentence %>
        </div>
      <% end %>
      <%= form.text_field :plan_type, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date %>
      <% if @health_insurance and @health_insurance.errors.messages[:start_date] %>
        <div class="text-danger small">
          <%= @health_insurance.errors.messages[:start_date].to_sentence %>
        </div>
      <% end %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>

    <%= form.submit "Save Health Insurance", class: "btn btn-success" %>
    <%= link_to 'Cancel', profile_health_insurances_path(profile_email: @profile.email), class: "btn btn-danger" %>

  </div>

<% end %>
