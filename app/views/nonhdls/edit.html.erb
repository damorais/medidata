<% content_for :titlebar do %>
  <h2 style="color:white">Non- Cholesterol - <%= @non_hdl.date %></h2>
<% end %>
<%= form_with model: @non_hdl, local: true, url: profile_nonhdl_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :value %>
	<% if @non_hdl and @non_hdl.errors.messages[:value] %>
	      <div class="text-danger small">
	          <%= @non_hdl.errors.messages[:value].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :value, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :date %>
        <% if @non_hdl and @non_hdl.errors.messages[:date] %>
	      <div class="text-danger small">
	          <%= @non_hdl.errors.messages[:date].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :date, class: "form-control" %>
    </div>
	
    <%= form.submit "Save Non-HDL", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_nonhdls_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>
