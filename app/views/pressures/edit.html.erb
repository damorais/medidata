<h2>Editar Pressão Sanguínea</h2>

<%= form_with model: @pressure, local: true, url: profile_pressure_path  do |form| %>

<div class="form-group">
    <%= form.label :sis %>
  <%= form.number_field :sis, class: "form-control" %>
</div>

<div class="form-group">
    <%= form.label :dia %>
    <%= form.number_field :dia, class: "form-control"  %>
</div>

<div class="form-group">
    <%= form.label :data %>
    <%= form.datetime_select :data, class: "form-control" %>
</div>

  <p>
    <%= form.submit "Salvar", class: "btn btn-success"  %>
  </p>
<% end %>
