<h2>Edit</h2>

<%= form_with model: @pressure, local: true, url: profile_pressure_path  do |form| %>

<div class="form-group">
    <%= form.label :sis %>
  <%= form.number_field :systolic, class: "col-sm-1" %>
</div>

<div class="form-group">
    <%= form.label :dia %>
    <%= form.number_field :diastolic, class: "col-sm-1"  %>
</div>

<div class="form-group">
    <%= form.label :data %>
    <%= form.datetime_select :data, class: "form-control" %>
</div>

  <p>
    <%= form.submit "Save", class: "btn btn-success"  %>
  </p>
<% end %>
