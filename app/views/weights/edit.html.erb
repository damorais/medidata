<% content_for :titlebar do %>
  <h2 style="color:white">Weight - <%= @weight.value %></h2>
<% end %>

<%= form_with model: @weight, local: true, url: profile_weight_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :value %>
	<% if @weight and @weight.errors.messages[:value] %>
	      <div class="text-danger small">
	          <%= @weight.errors.messages[:value].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :value, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :date %>
        <% if @weight and @weight.errors.messages[:date] %>
	      <div class="text-danger small">
	          <%= @weight.errors.messages[:date].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :date, class: "form-control" %>
    </div>
	
    <%= form.submit "Save Weight", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_weights_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>

