<h1>Weights</h1>

<% if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

<%= link_to 'Add weight', new_profile_weight_path(profile_email: @profile.email) %>

<table class="table">
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Value</th>
    <th scope="col">Date</th>
    <th></th>
  </tr>
 
  <% @weights.each do |weight| %>
    <tr>
      <td><%= weight.id %></td>
      <td><%= weight.value %></td>
      <td><%= weight.date %></td>
      <td>
        <%= link_to "Edit", edit_profile_weight_path(profile_email: @profile.email, id: weight.id) %> | 
        <%= link_to "Delete", edit_profile_weight_path(profile_email: @profile.email, id: weight.id), 
            method: :delete, data: { confirm: 'Are you sure?' } %> 
        </td>
    </tr>
  <% end %>
  
</table>
