<h2>Edite o seu perfil</h2>

<% if flash[:success] %>
      <div class="alert alert-success" role="alert">
	    <%= flash[:success] %>
      </div>
<% end %>


<%= form_with model: @profile, local: true, url: profile_path  do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <div class="row">
            <%= form.label :email %>: <%= @profile.email %>
        </div>
        <div class="row">
            <%= form.label :firstname %>:<%= @profile.firstname %>
        </div>
        <div class="row">
            <%= form.label :lastname %>: <%= @profile.lastname %>
        </div>
    </div>

    <div class="form-group">
        <%= form.label :birthdate %>
        <% if @profile and @profile.errors.messages[:birthdate] %>
	      <div class="text-danger small">
	          <%= @profile.errors.messages[:birthdate].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :birthdate, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :sex %>
        <div class="form-check form-check-inline">
            <%= form.radio_button :sex, "Female", class:  "form-check-input" %>
            <%= form.label :sex_female, "Feminino", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
            <%= form.radio_button :sex, "Male", class: "form-check-input" %>
            <%= form.label :sex_male, "Masculino", class: "form-check-label" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender, class: "form-control" %>
    </div>

    <%= form.submit "Salvar meu perfil", class: "btn btn-success" %>	

</div>

<% end %>
