<h2>Crie o seu perfil</h2>

<% if flash[:success] %>
      <div class="alert alert-success" role="alert">
	    <%= flash[:success] %>
      </div>
<% end %>


<%= form_with scope: :profile, local: true, url: profiles_path do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :email %>
	<% if @profile and @profile.errors.messages[:email] %>
	      <div class="text-danger small">
	          <%= @profile.errors.messages[:email].to_sentence %>
	      </div>
	<% end %>
	<%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :firstname %>
	<%= form.text_field :firstname, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :lastname %>
        <%= form.text_field :lastname, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :birthdate %>
        <%= form.date_field :birthdate, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :sex %>
        <div class="form-check form-check-inline">
            <%= form.radio_button :sex, "Female", class:  "form-check-input" %>
            <%= form.label :sex_female, "Feminino", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
            <%= form.radio_button :sex, "Male", class: "form-check-input" %>
            <%= form.label :sex_male, "Masculino", class: "form-check-label" %>
        </div>
    </div>
    
    <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender, class: "form-control" %>
    </div>

    <%= form.submit "Criar meu perfil", class: "btn btn-success" %>	

</div>

<% end %>
