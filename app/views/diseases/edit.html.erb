<% content_for :titlebar do %>
  <h2 style="color:white">Disease - <%= @disease.name %></h2>
<% end %>

<%= form_with model: @disease, local: true, url: profile_disease_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :name %>
	<% if @disease and @disease.errors.messages[:name] %>
	      <div class="text-danger small">
	          <%= @disease.errors.messages[:name].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <% if @disease and @disease.errors.messages[:description] %>
	      <div class="text-danger small">
	          <%= @disease.errors.messages[:description].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :start %>
        <% if @disease and @disease.errors.messages[:start] %>
	      <div class="text-danger small">
	          <%= @disease.errors.messages[:start].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :start, class: "form-control" %>
    </div>	

    <div class="form-group">
        <%= form.label :finish %>
        <% if @disease and @disease.errors.messages[:finish] %>
	      <div class="text-danger small">
	          <%= @disease.errors.messages[:finish].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :finish, class: "form-control" %>
    </div>
	
    <%= form.submit "Save Disease", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_diseases_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>
