<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="form-group">
      <%= f.label :email %>
      <% if resource and resource.errors.messages[:email] %>
      <div class="text-danger small">
          <%= resource.errors.messages[:email].to_sentence %>
      </div>
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :password %>
      <% if resource and resource.errors.messages[:password] %>
      <div class="text-danger small">
          <%= resource.errors.messages[:password].to_sentence %>
      </div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
      <%= f.label :password_confirmation %>
      <% if resource and resource.errors.messages[:password_confirmation] %>
      <div class="text-danger small">
          <%= resource.errors.messages[:password_confirmation].to_sentence %>
      </div>
      <% end %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
  
  <%= f.submit "Sign up", class: "btn btn-success" %>	

<% end %>

