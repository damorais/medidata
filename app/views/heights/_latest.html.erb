<div id="widget_latest_height" class="col-md-3">
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <% if latest_height %>
            
            <h3 class="card-title">
                Height:
            </h3>
            <h2 class=""><%= latest_height.value %> m</h2>
            
            <% else %>
            
            <small>You don't have any height registered</small> 
            
            <% end %>
        </div>
        <% if latest_height %>
        
        <div class="card-footer">
            <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">Registered: <%= latest_height.date.to_date() %></small>
            </div>
        </div>
        
        <% end %>
    </div>
</div>
