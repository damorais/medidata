<% content_for :titlebar do %>
  <h2 style="color:white">Heights</h2>
<% end %>

<% if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
  </div>
<% end %>

<table class="table table-striped">
  <tr>
    <th scope="col">ID</th>
    <th scope="col">Value</th>
    <th scope="col">Date</th>
    <th scope="col"></th>
  </tr>
 
  <% @heights.each do |height| %>
    <tr>
      <td><%= height.id %></td>
      <td><%= height.value %></td>
      <td><%= height.date %></td>
      <td> 
        <%= link_to "Edit", edit_profile_height_path(profile_email: @profile.email, id: height.id), class: "btn btn-sm btn-primary" %> | 
        <%= link_to "Delete", profile_height_path(profile_email: @profile.email, id: height.id), 
            method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %> 
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add Height', new_profile_height_path(profile_email: @profile.email), class: "btn btn-sm btn-success" %>
