<h2>Register your Total Cholesterol</h2>

<%= form_with scope: :total, local: true, url: profile_totals_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :value %>
	<% if @total and @total.errors.messages[:value] %>
	      <div class="text-danger small">
	          <%= @total.errors.messages[:value].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :value, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :date %>
        <% if @total and @total.errors.messages[:date] %>
	      <div class="text-danger small">
	          <%= @total.errors.messages[:date].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :date, class: "form-control" %>
    </div>

    <%= form.submit "Save Total Cholesterol", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_totals_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>
