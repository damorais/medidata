<% if flash[:success] %>
      <div class="alert alert-success" role="alert">
	    <%= flash[:success] %>
      </div>
<% end %>

<%= form_with scope: :contact, local: true, url: profile_contacts_path do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :Email %>
	<% if @contact and @contact.errors.messages[:contactemail] %>
	      <div class="text-danger small">
	          <%= @contact.errors.messages[:contactemail].to_sentence %>
	      </div>
	<% end %>
	<%= form.email_field :contactemail, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :Nome %>
        <% if @contact and @contact.errors.messages[:contactname] %>
	      <div class="text-danger small">
	          <%= @contact.errors.messages[:contactname].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :contactname, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :Telefone %>
        <% if @contact and @contact.errors.messages[:contactphone] %>
	      <div class="text-danger small">
	          <%= @contact.errors.messages[:contactphone].to_sentence %>
	      </div>
	<% end %>
        <%= form.text_field :contactphone, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= form.label :Celular %>
        <% if @contact and @contact.errors.messages[:contactmobile] %>
	      <div class="text-danger small">
	          <%= @contact.errors.messages[:contactmobile].to_sentence %>
	      </div>
	<% end %>
        <%= form.text_field :contactmobile, class: "form-control" %>
    </div>
    
    <%= form.submit "Criar meu contato", class: "btn btn-success" %>	

</div>

<% end %>