<% content_for :titlebar do %>
  <h2 style="color:white">Relative - <%= @relative.name %></h2>
<% end %>

<%= form_with model: @relative, local: true, url: profile_relative_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :name %>
	<% if @relative and @relative.errors.messages[:name] %>
	      <div class="text-danger small">
	          <%= @relative.errors.messages[:name].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <% if @relative and @relative.errors.messages[:description] %>
	      <div class="text-danger small">
	          <%= @relative.errors.messages[:description].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :kinship %>
	<% if @relative and @relative.errors.messages[:kinship] %>
	      <div class="text-danger small">
	          <%= @relative.errors.messages[:kinship].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :kinship, class: "form-control" %>
    </div>

    <%= form.submit "Save Relative", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_relatives_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>
