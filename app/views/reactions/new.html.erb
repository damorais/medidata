<h2>Register your Adverse Reaction</h2>

<%= form_with scope: :reaction, local: true, url: profile_reactions_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :name %>
	<% if @reaction and @reaction.errors.messages[:name] %>
	      <div class="text-danger small">
	          <%= @reaction.errors.messages[:name].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :cause %>
	<% if @reaction and @reaction.errors.messages[:cause] %>
	      <div class="text-danger small">
	          <%= @reaction.errors.messages[:cause].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :cause, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :description %>
        <% if @reaction and @reaction.errors.messages[:description] %>
	      <div class="text-danger small">
	          <%= @reaction.errors.messages[:description].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :start %>
        <% if @reaction and @reaction.errors.messages[:start] %>
	      <div class="text-danger small">
	          <%= @reaction.errors.messages[:start].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :start, class: "form-control" %>
    </div>	

    <div class="form-group">
        <%= form.label :finish %>
        <% if @reaction and @reaction.errors.messages[:finish] %>
	      <div class="text-danger small">
	          <%= @reaction.errors.messages[:finish].to_sentence %>
	      </div>
	<% end %>
        <%= form.date_field :finish, class: "form-control" %>
    </div>
	
    <%= form.submit "Save Adverse Reaction", class: "btn btn-success" %>	
	<%= link_to 'Cancel', profile_reactions_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>
