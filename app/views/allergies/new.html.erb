<% content_for :titlebar do %>
  <h2 style="color:white">New Allergy</h2>
<% end %>

<% if flash[:success] %>
      <div class="alert alert-success" role="alert">
	    <%= flash[:success] %>
      </div>
<% end %>

<%= form_with scope: :allergy, local: true, url: profile_allergies_path(profile_email: @profile.email) do |form| %>
<div class="form-horizontal">

    <div class="form-group">
        <%= form.label :Name %>
	<% if @allergy and @allergy.errors.messages[:name] %>
	      <div class="text-danger small">
	          <%= @allergy.errors.messages[:name].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :Description %>
        <% if @allergy and @allergy.errors.messages[:description] %>
	      <div class="text-danger small">
	          <%= @allergy.errors.messages[:description].to_sentence %>
	      </div>
	<% end %>
	<%= form.text_area :description, class: "form-control" %>
    </div>
      
    <%= form.submit "Save Allergy", class: "btn btn-success" %>
	<%= link_to 'Cancel', profile_allergies_path(profile_email: @profile.email), class: "btn btn-danger" %>

</div>

<% end %>